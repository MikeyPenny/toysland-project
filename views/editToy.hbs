    <form action="/updateToy" method="post">
        <input type="hidden" name="id" value="{{toy._id}}" >
        <div class="form-group">
            <label for="prodname">Product name:</label>
            <input type="text" class="form-control form-control-lg" id="prodname" name="prodname" value="{{toy.prodname}}" placeholder="Product name">
