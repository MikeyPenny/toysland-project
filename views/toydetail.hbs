<div class="container mt-form">
    <div class="media">
        <img src="{{toy.picture}}" class="mr-3" alt="{{toy.prodname}}">
        <div class="media-desc-content">
            <div class="media-body">
                <h5 class="mt-0">{{toy.prodname}}</h5>
                <p>{{toy.description}}</p>
            </div>
            <div class="star-price-qty">
                <p>Stars:</p>
                <p>Price: $<span>{{toy.price}}</span></p>
                <p>Units:<span>{{toy.units}}</span></p>
            </div>
            <div class="btn-container btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                <div class="btn-group-lg mr-5" role="group" aria-label="First group">
                    <button type="button" class="btn btn-light btn-outline-secondary"><span><i class="far fa-star"></i></span>Star</button>
                </div>
                <div class="btn-group-lg mr-5" role="group" aria-label="Second group">
                    <button type="button" class="btn btn-light btn-outline-secondary">Comment</button>
                </div>
                <div class="btn-group-lg" role="group" aria-label="Third group">
                    <button type="button" class="btn btn-light btn-outline-secondary"><span><i class="fas fa-shopping-cart"></i></span>Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
    
</div>