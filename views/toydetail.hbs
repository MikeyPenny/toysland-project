<div class="container mt-form">
    <div class="media">
        <img src="{{toy.picture}}" class="mr-3" alt="{{toy.prodname}}">
        <div class="media-desc-content">
            <div class="media-body">
                <h5 class="mt-0">{{toy.prodname}}</h5>
                <p>{{toy.description}}</p>
            </div>
            <div class="star-price-qty">
                <p>Stars: <span id="star" >{{toy.stars}}</span></p>
                <p>Price: $<span id="price">{{toy.price}}</span></p>
                <p>Units:<span id="units">{{toy.units}}</span></p>
            </div>
            <div class="btn-container btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">

                {{#if currentUser}}
                    {{#if toy.toyIsStarred}}
                        <div class="btn-group mr-5" role="group" aria-label="First group">
                            <a type="button" id="unstar" href="/unStar/{{toy._id}}" class="btn btn-light btn-outline-secondary"><span><i class="far fa-star"></i></span>Remove Star</a>
                        </div>
                    {{else}}
                        <div class="btn-group mr-5" role="group" aria-label="First group">
                            <a type="button" href="/starAToy/{{toy._id}}" id="star-toy" class="btn btn-light btn-outline-secondary"><span><i class="far fa-star"></i></span>Star</a>
                        </div>
                    {{/if}}

                    <div class="btn-group mr-5" role="group" aria-label="Second group">
                        <button type="button" class="btn btn-light btn-outline-secondary">Comment</button>
                    </div>
                    {{#if toy.toyIsAdded}}
                    <div class="btn-group" role="group" aria-label="Third group">
                        <a id="cart-rem" type="button" href="/removeToy/{{toy._id}}" class="btn btn-light btn-outline-secondary"><span><i class="fas fa-shopping-cart"></i></span>Remove from Cart</a>
                    </div>
                    {{else}}
                    <div class="btn-group" role="group" aria-label="Third group">
                        <a id="cart-add" type="button" href="/addToCart/{{toy._id}}" class="btn btn-light btn-outline-secondary"><span><i class="fas fa-shopping-cart"></i></span>Add to Cart</a>
                    </div>
                    {{/if}}
                {{else}}
                    <div class="btn-group mr-5" role="group" aria-label="Second group">
                        <button type="button" class="btn btn-light btn-outline-secondary">Comment</button>
                    </div>
                {{/if}}

                
            </div>
        </div>
    </div>
    
</div>

